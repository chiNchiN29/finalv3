<h1>SUMMARY OF ALL MOVES</h1>
<p>Face up cards</p>
<% @cards.each do |face| %>
	<%= display_image(face) %>
<% end %>
<p>Result of all rounds</p>
<table class ="table">
	<thead>
		<tr>
			<td>Round</td>	
			<td>Winner</td>
			<td>Money</td>
			<td>Card</td>
		</tr>
	</thead>
	<tbody>
		<% @players.each do |player| %>
		<tr>
			<td>1</td>
			<td>win</td>
			<td><%= player.p1_bet %></td>
			<td><%= player.p1card %></td>
			<td><%= link_to 'More', player %>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to 'Continue', new_player_path %>
<%= link_to 'End Game', root_path %> 